<tr id="admin_comment_<%= comment.id %>">
  <td class="cntr left-edge"><%= comment.id %></td>
  <td><%= h(comment.name) %></td>
  <td><%= h(comment.email) %></td>
  <td><%= comment.created_at.strftime("%d %b %Y %I:%M%p") %></td>
  <td class="cntr"><% if comment.approved? -%><%= image_tag("/images/icon_check_10.png", :size => "10x10", :class => 'admin-icon') %><% end -%></td>
  <td class="cntr"><% if comment.spam? -%><%= image_tag("/images/icon_check_10.png", :size => "10x10", :class => 'admin-icon') %><% end -%></td>
  
  <td class="cntr"><%= link_to image_tag("/images/icon_view_10.png", :size => "10x10", :class => 'admin-icon'), [url(:node, comment.node), "#comment-#{comment.id}"].join(), { :title => 'See the comment on the site.' } %>
  <td class="cntr"><%= link_to image_tag("/images/icon_edit_10.png", :size => "10x10", :class => 'admin-icon'), url(:edit_admin_comment, comment), { :title => 'Edit this post.' } %>
  <td class="cntr right-edge"><%= link_to image_tag("/images/icon_delete_10.png", :size => "10x10", :class => 'admin-icon'), url(:delete_admin_comment, comment), { :title => 'Delete this post.', :onclick => "return confirm('Are you sure you want to delete this comment?')", :method => :delete } %>
</tr>